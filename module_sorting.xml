<?xml version="1.0" encoding="UTF-8"?>
<project name="module_sorting" default="compile.module.sorting">
  <dirname property="module.sorting.basedir" file="${ant.file.module_sorting}"/>
  
  <property name="module.jdk.home.sorting" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.sorting" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.sorting" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.sorting" value="-encoding UTF-8 -source 8 -target 8 ${compiler.args}"/>
  
  <property name="sorting.output.dir" value="${module.sorting.basedir}/out/production/sorting"/>
  <property name="sorting.testoutput.dir" value="${module.sorting.basedir}/out/test/sorting"/>
  
  <path id="sorting.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="sorting.module.production.classpath">
    <path refid="${module.jdk.classpath.sorting}"/>
  </path>
  
  <path id="sorting.runtime.production.module.classpath">
    <pathelement location="${sorting.output.dir}"/>
  </path>
  
  <path id="sorting.module.classpath">
    <path refid="${module.jdk.classpath.sorting}"/>
    <pathelement location="${sorting.output.dir}"/>
  </path>
  
  <path id="sorting.runtime.module.classpath">
    <pathelement location="${sorting.testoutput.dir}"/>
    <pathelement location="${sorting.output.dir}"/>
  </path>
  
  
  <patternset id="excluded.from.module.sorting">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.sorting">
    <patternset refid="excluded.from.module.sorting"/>
  </patternset>
  
  <path id="sorting.module.sourcepath">
    <dirset dir="${module.sorting.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.sorting" depends="compile.module.sorting.production,compile.module.sorting.tests" description="Compile module sorting"/>
  
  <target name="compile.module.sorting.production" depends="register.custom.compilers" description="Compile module sorting; production classes">
    <mkdir dir="${sorting.output.dir}"/>
    <javac2 destdir="${sorting.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.sorting}/javac">
      <compilerarg line="${compiler.args.sorting}"/>
      <bootclasspath refid="sorting.module.bootclasspath"/>
      <classpath refid="sorting.module.production.classpath"/>
      <src refid="sorting.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.sorting"/>
    </javac2>
    
    <copy todir="${sorting.output.dir}">
      <fileset dir="${module.sorting.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.sorting.tests" depends="register.custom.compilers,compile.module.sorting.production" description="compile module sorting; test classes" unless="skip.tests"/>
  
  <target name="clean.module.sorting" description="cleanup module">
    <delete dir="${sorting.output.dir}"/>
    <delete dir="${sorting.testoutput.dir}"/>
  </target>
</project>